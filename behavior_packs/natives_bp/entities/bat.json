{
   "format_version":"1.10.0",
   "minecraft:entity":{
      "description":{
         "identifier":"ccl:bat",
         "is_spawnable":true,
         "is_summonable":true,
         "is_experimental":false
      },
      "component_groups":{
         "ccl:bat_baby":{
            "minecraft:type_family":{
               "family":[
                  "bat",
                  "mob"
               ]
            },
            "minecraft:collision_box":{
               "width":0.5,
               "height":0.5
            },
            "minecraft:is_baby":{

            },
            "minecraft:scale":{
               "value":0.3
            },
            "minecraft:behavior.follow_parent":{
               "priority":4,
               "speed_multiplier":1.1
            },
            "minecraft:ageable":{
               "duration":1200,
               "feedItems":[
                  "apple",
                  "red_flower"
               ],
               "grow_up":{
                  "event":"ageable_grow_up",
                  "target":"self"
               }
            },
            "minecraft:movement":{
               "value":0.1
            }
         },
         "minecraft:bat_adult":{
            "minecraft:loot":{
               "table":"loot_tables/bat.json"
            },
            "minecraft:breedable":{
               "requireTame":false,
               "breedsWith":{
                  "mateType":"ccl:bat",
                  "babyType":"ccl:bat",
                  "breed_event":{
                     "event":"minecraft:entity_born",
                     "target":"baby"
                  },
                  "causes_pregnancy":false
               },
               "breedItems":[
                  "apple",
                  "red_flower"
               ]
            },
            "minecraft:behavior.breed":{
               "priority":6,
               "speed_multiplier":1.1
            },
            "minecraft:scale":{
               "value":0.5
            }
         },
         "minecraft:bat_wild":{
            "minecraft:type_family":{
               "family":[
                  "bat",
                  "bat_wild",
                  "mob"
               ]
            },
            "minecraft:behavior.random_fly":{
               "priority":4,
               "xz_dist":15,
               "y_dist":8,
               "y_offset":0,
               "speed_multiplier":1.0,
               "can_land_on_trees":true,
               "avoid_damage_blocks":true
            },
            "minecraft:behavior.follow_mob":{
               "priority":3,
               "speed_multiplier":1.0,
               "stop_distance":3,
               "search_range":20
            }
         }
      },
      "components":{
         "minecraft:breathable":{
            "total_supply":15,
            "suffocate_time":0
         },
         "minecraft:can_fly":{
            "value":true
         },
         "minecraft:navigation.fly":{
            "can_path_over_water":true,
            "avoid_water":true,
            "avoid_damage_blocks":true
         },
         "minecraft:movement.fly":{

         },
         "minecraft:behavior.random_stroll":{
            "priority":6,
            "speed_multiplier":0.2
         },
         "minecraft:can_climb":{

         },
         "minecraft:behavior.mount_pathing":{
            "priority":5,
            "speed_multiplier":0.1,
            "target_dist":0.0,
            "track_target":true
         },
         "minecraft:collision_box":{
            "width":0.5,
            "height":1
         },
         "minecraft:nameable":{

         },
         "minecraft:health":{
            "value":6,
            "max":6
         },
         "minecraft:hurt_on_condition":{
            "damage_conditions":[
               {
                  "filters":{
                     "test":"in_lava",
                     "subject":"self",
                     "operator":"==",
                     "value":true
                  },
                  "cause":"lava",
                  "damage_per_tick":4
               }
            ]
         },
         "minecraft:movement":{
            "value":0.4
         },
         "minecraft:damage_sensor":{
            "triggers":{
               "cause":"fall",
               "deals_damage":false
            }
         },
         "minecraft:fall_damage":{
            "value":0.0
         },
         "minecraft:jump.static":{

         },
         "minecraft:can_fly":{
            "value":true
         },
         "minecraft:movement.fly":{

         },
         "minecraft:physics":{

         },
         "minecraft:pushable":{
            "is_pushable":true,
            "is_pushable_by_piston":true
         },
         "minecraft:behavior.float":{
            "priority":0
         },
         "minecraft:behavior.panic":{
            "priority":0,
            "speed_multiplier":1.25
         },
         "minecraft:behavior.look_at_player":{
            "priority":1,
            "look_distance":8.0
         }
      },
      "events":{
         "minecraft:entity_spawned":{
            "add":{
               "component_groups":[
                  "minecraft:bat_adult",
                  "minecraft:bat_wild"
               ]
            }
         },
         "minecraft:entity_born":{
            "remove":{

            },
            "add":{
               "component_groups":[
                  "ccl:bat_baby",
                  "minecraft:bat_wild"
               ]
            }
         },
         "ageable_grow_up":{
            "remove":{
               "component_groups":[
                  "ccl:bat_baby"
               ]
            },
            "add":{
               "component_groups":[
                  "ccl:bat_adult"
               ]
            }
         }
      }
   }
}
